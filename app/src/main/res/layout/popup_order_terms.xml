<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_cc000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="47dp"
        android:gravity="bottom|right">
        <ImageView
            android:id="@+id/iv_order_terms_close"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/default_d"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_corner_white"
        android:elevation="3dp">
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:gravity="center"
                style="@style/txt_opensans_b_20_greyishbrown"
                android:text="@string/buy_order_terms_title"/>
        </LinearLayout>
        <ScrollView
            android:layout_marginBottom="20dp"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="360dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                style="@style/txt_opensans_r_13_greyishbrown"
                android:text="@string/buy_order_terms_desc"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>