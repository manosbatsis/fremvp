<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_buy_order_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_gray"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <!-- 2nd card : Container type -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sell_order_container_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_sell_order_container_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                style="@style/txt_opensans_b_15_565656"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_sell_order_container_type"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/iv_sell_order_container_type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginEnd="8dp"
                android:src="@drawable/btn_go_default_l"
                android:visibility="gone"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_sell_order_container_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- 3rd card : volume input & Price -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Volume input-->
            <include layout="@layout/body_batch"
                app:layout_constraintBottom_toTopOf="@+id/ll_volume_set"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_volume_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_batch_root"
                app:layout_constraintBottom_toBottomOf="parent">
                <!-- list view title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="14dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/chk_sell_order_period_all"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/bg_checkbox"
                        android:visibility="invisible"/>
                    <View
                        android:id="@+id/view_sell_order_title_dummy"
                        android:layout_width="16dp"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_sell_order_title_period"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        style="@style/txt_opensans_b_11_greyishbrown"
                        android:text="@string/volume_period"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_title_volume_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            style="@style/txt_opensans_b_11_greyishbrown"
                            android:text="@string/volume_price"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="2dp"
                            android:gravity="center_vertical|right"
                            style="@style/txt_opensans_r_13_greyishbrown"
                            android:text="x"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_title_volume_volume"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        style="@style/txt_opensans_b_11_greyishbrown"
                        android:text="@string/volume_volume"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.45"
                        android:gravity="center_vertical|right"
                        style="@style/txt_opensans_b_11_greyishbrown"
                        android:text="@string/volume_subtotal"/>
                </LinearLayout>

                <!-- recycler view -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_volume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:elevation="0dp"
                    android:padding="0dp"
                    android:background="@color/white"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_f2f2f2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:text="@string/volume_sum"/>
                    <TextView
                        android:id="@+id/tv_sell_order_sum_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_sell_order_total_deal_amount"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/div_sell_order_total_deal_payment">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_sell_order_total_deal_amount_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:text="@string/volume_deal_amount"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        style="@style/txt_opensans_r_13_verylightpink"
                        android:text="@string/volume_deal_amount_desc_simple"/>
                    <TextView
                        android:id="@+id/tv_sell_order_total_deal_amount_value"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_sell_order_total_deal_amount_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_sell_order_total_deal_amount_name"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_sell_order_total_deal_amount_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    style="@style/txt_opensans_r_13_verylightpink"
                    android:text=""/>
            </LinearLayout>
            <View
                android:id="@+id/div_sell_order_total_deal_payment"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f2f2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_sell_order_total_deal_amount"
                app:layout_constraintBottom_toTopOf="@+id/ll_sell_order_payment_receivable_name"/>

            <LinearLayout
                android:id="@+id/ll_sell_order_payment_receivable_name"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_sell_order_total_deal_payment"
                app:layout_constraintBottom_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:text="@string/volume_deal_payment_transaction"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        style="@style/txt_opensans_r_13_verylightpink"
                        android:text="@string/volume_deal_payment_payable_desc_simple"/>
                    <TextView
                        android:id="@+id/tv_sell_order_deal_payment_receivable_value"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_sell_order_deal_payment_receivable_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    style="@style/txt_opensans_r_13_verylightpink"
                    android:text="@string/volume_deal_payment_payable_desc"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


 </LinearLayout>