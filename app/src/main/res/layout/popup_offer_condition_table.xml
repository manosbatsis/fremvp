<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.selloffer.SofConditionTableAct"
    tools:showIn="@layout/act_offer_condition_table">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/pale_gray"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pale_gray"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/pale_gray">

                <!-- RdTerm -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="6dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_b_15_greyishbrown"
                            android:text="@string/buy_order_condition_popup_rd_term"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_f2f2f2"/>
                        <TextView
                            android:id="@+id/tv_offer_condition_rdterm"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginBottom="6dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_r_15_595959"
                            android:text=""/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ContainerType & Size -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="6dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_b_15_greyishbrown"
                            android:text="@string/popup_offer_container_type_size"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_f2f2f2"/>
                        <LinearLayout
                            android:id="@+id/ll_offer_condition_containertype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="6dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_b_15_greyishbrown"
                            android:text="@string/buy_order_condition_popup_pay_plan"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_f2f2f2"/>

                        <TextView
                            android:id="@+id/tv_offer_condition_payplan"
                            style="@style/txt_opensans_r_15_595959"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginBottom="6dp"
                            android:gravity="left|center_vertical"
                            android:text="" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/txt_opensans_r_11_737373"
                    android:text="@string/buy_order_condition_popup_go_calendar_pay"
                    android:visibility="gone"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="24dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="6dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_b_15_greyishbrown"
                            android:text="@string/buy_order_condition_popup_carrier"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_f2f2f2"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/iv_offer_condition_carrier_logo"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/carrier_logo_msk"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/tv_offer_condition_carrier"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                                <TextView
                                    android:id="@+id/tv_offer_condition_carrier"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="4dp"
                                    android:gravity="center_vertical"
                                    style="@style/txt_opensans_b_15_greyishbrown"
                                    android:text=""
                                    app:layout_constraintLeft_toRightOf="@+id/iv_offer_condition_carrier_logo"
                                    app:layout_constraintRight_toLeftOf="@+id/tv_offer_condition_carrier_desc"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                                <TextView
                                    android:id="@+id/tv_offer_condition_carrier_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    style="@style/txt_opensans_r_10_greyishbrown"
                                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_offer_condition_carrier"
                                    android:text=""
                                    app:layout_constraintLeft_toRightOf="@+id/tv_offer_condition_carrier"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- MVP 에서 제외 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/bg_round_corner_white"
                    android:elevation="3dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_b_14_greyishbrown"
                            android:text="@string/buy_order_condition_popup_operator"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f2f2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_r_15_595959"
                        android:text=""/>
                </LinearLayout>

                <!-- MVP 에서 제외 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/txt_opensans_r_11_737373"
                        android:text="@string/buy_order_condition_popup_transaction_statement"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


