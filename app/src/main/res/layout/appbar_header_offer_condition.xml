<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:orientation="vertical"
    app:layout_collapseMode="pin"
    android:background="@color/title_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:text="@string/buy_order_condition_popup_master_contract_no"
            style="@style/txt_opensans_eb_13_greyishbrown"/>
        <TextView
            android:id="@+id/tv_offer_condition_master_contract_no"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text=""
            style="@style/txt_opensans_r_13_greyishbrown"/>
    </LinearLayout>

</LinearLayout>