<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <View
            android:id="@+id/vw_item_divider_1st"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/lo_item_footer_sub_total"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/vw_item_divider_1st"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:paddingTop="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Sub Total"
                style="@style/txt_opensans_r_11_greyishbrown"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:text="$9,500"
                style="@style/txt_opensans_r_13_greyishbrown"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lo_item_footer_initial_payment"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/lo_item_footer_sub_total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:paddingTop="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Initial Payment"
                android:textSize="11sp"
                style="@style/txt_opensans_r_11_greyishbrown"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:text="$4,500"
                style="@style/txt_opensans_r_13_greyishbrown"/>
        </LinearLayout>

        <View
            android:id="@+id/vw_item_divider_2nd"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f2f2f2"
            app:layout_constraintTop_toBottomOf="@+id/lo_item_footer_initial_payment"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/vw_item_divider_2nd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:paddingTop="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="DEAL AMOUNT"
                style="@style/txt_opensans_b_16_greyishbrown"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:text="$1,500"
                style="@style/txt_opensans_b_16_greyishbrown"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>