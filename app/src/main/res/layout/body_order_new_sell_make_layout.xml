<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_gray"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <!-- Period & Volume type -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sell_order_period_and_volume"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cv_sell_order_collect_plan"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_sell_order_period_and_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                style="@style/txt_opensans_b_15_greyishbrown"
                android:text="@string/buy_order_period_volume"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_sell_order_period_and_volume"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/iv_sell_order_period_and_volume"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginEnd="8dp"
                android:src="@drawable/btn_go_default_l"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_sell_order_period_and_volume"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Pay plan -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sell_order_collect_plan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_sell_order_period_and_volume"
        app:layout_constraintBottom_toTopOf="@+id/cv_sell_order_initial_payment_payable"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_sell_order_pay_plan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                style="@style/txt_opensans_b_15_greyishbrown"
                android:text="@string/sell_order_collect_plan"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_sell_order_pay_plan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/iv_sell_order_pay_plan"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginEnd="8dp"
                android:src="@drawable/btn_go_default_l"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_sell_order_pay_plan"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Initial payment payable -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sell_order_initial_payment_payable"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_sell_order_collect_plan"
        app:layout_constraintBottom_toTopOf="@+id/tv_sell_order_transaction_fee_desc"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sell_order_initial_payment_receivable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:singleLine="true"
                android:ellipsize="none"
                android:textAllCaps="true"
                style="@style/txt_opensans_b_16_greyishbrown"
                android:text="@string/buy_order_initial_transaction"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_sell_order_initial_payment_receivable_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_sell_order_initial_payment_receivable_desc"/>
            <TextView
                android:id="@+id/tv_sell_order_initial_payment_receivable_value"
                style="@style/txt_opensans_b_16_greyishbrown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$750"
                android:layout_marginEnd="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_sell_order_initial_payment_receivable"
                app:layout_constraintLeft_toRightOf="@+id/tv_sell_order_initial_payment_receivable"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/tv_sell_order_initial_payment_receivable_desc"
                style="@style/txt_opensans_l_10_737373"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/sell_order_initial_payment_receivable_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sell_order_initial_payment_receivable"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_sell_order_transaction_fee_desc"
        style="@style/txt_opensans_b_13_greyishbrown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:gravity="center"
        android:text="@string/buy_order_transaction_fee_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_sell_order_initial_payment_payable"
        app:layout_constraintBottom_toTopOf="@+id/cv_sell_order_terms_and_condition"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sell_order_terms_and_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sell_order_transaction_fee_desc"
        app:layout_constraintBottom_toTopOf="@+id/rl_sell_order_agree_terms"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sell_order_terms_and_condition_title"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                style="@style/txt_opensans_b_16_greyishbrown"
                android:text="@string/buy_order_terms_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_sell_order_terms_and_condition_desc"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_sell_order_terms_and_condition_desc"
                style="@style/txt_opensans_r_13_greyishbrown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:maxLines="4"
                android:text="@string/buy_order_terms_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sell_order_terms_and_condition_title"
                app:layout_constraintBottom_toTopOf="@+id/tv_sell_order_terms_more"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_sell_order_terms_more"
                style="@style/txt_opensans_b_13_greyishbrown"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical|right"
                android:text="@string/more"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sell_order_terms_and_condition_desc"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/rl_sell_order_agree_terms"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:padding="5dp"
        android:clipToPadding="false"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_sell_order_terms_and_condition"
        app:layout_constraintBottom_toBottomOf="parent">
        <CheckBox
            android:id="@+id/chk_sell_order_terms_agree"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:elevation="3dp"
            android:button="@android:color/transparent"
            android:background="@drawable/bg_checkbox_white_agree"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/chk_sell_order_terms_agree"
            style="@style/txt_opensans_r_13_greyishbrown"
            android:text="@string/buy_order_term_agree"/>
    </RelativeLayout>

</LinearLayout>