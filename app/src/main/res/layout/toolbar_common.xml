<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_common"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/title_bar">

    <ImageView
        android:id="@+id/toolbar_left_btn"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:paddingStart="0dp"
        android:paddingTop="11dp"
        android:paddingEnd="30dp"
        android:paddingBottom="11dp"
        android:src="@drawable/ic_toolbar_back" />

    <TextView android:id="@+id/toolbar_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        style="@style/txt_opensans_eb_20_white"
        tools:text="Common Title"/>

    <ImageView android:id="@+id/toolbar_right_btn"
        android:layout_centerVertical="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_toolbar_menu"
        android:visibility="gone"/>

    <TextView android:id="@+id/toolbar_done_btn"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical|right"
        style="@style/txt_opensans_b_15_white"
        android:text="@string/done"
        android:visibility="visible"/>
</RelativeLayout>