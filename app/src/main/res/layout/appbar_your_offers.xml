<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    android:id="@+id/ab_your_offers"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/title_bar"
    tools:showIn="@layout/act_your_offers">

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/title_bar"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <!-- From -> To -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_route_filter_from_to"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_route_filter_from"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginEnd="4dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_round_corner_black_route_filter"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_route_filter_from_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="16dp"
                                android:layout_marginEnd="5dp"
                                android:layout_centerVertical="true"
                                style="@style/txt_opensans_eb_15_white"
                                android:text="@string/route_filter_from"/>
                            <TextView
                                android:id="@+id/tv_route_filter_from_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_toRightOf="@+id/tv_route_filter_from_code"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:ellipsize="none"
                                android:gravity="center_vertical"
                                style="@style/txt_opensans_r_13_white"/>
                            <View
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/route_name_text_gradient"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_route_filter_to"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginStart="4dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_round_corner_black_route_filter"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_route_filter_to_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="22dp"
                                android:layout_marginEnd="5dp"
                                android:layout_centerVertical="true"
                                style="@style/txt_opensans_eb_15_white"
                                android:text="@string/route_filter_to"/>
                            <TextView
                                android:id="@+id/tv_route_filter_to_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_toRightOf="@+id/tv_route_filter_to_code"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:ellipsize="none"
                                android:gravity="center_vertical"
                                style="@style/txt_opensans_r_13_white"/>
                            <View
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/route_name_text_gradient"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_route_filter_all"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_routefilter_fromto_default"/>
            </RelativeLayout>
        </FrameLayout>

        <!-- fixed toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/title_bar"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin">
            <include layout="@layout/toolbar_your_offers"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>
