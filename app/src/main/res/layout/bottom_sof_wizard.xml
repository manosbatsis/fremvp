<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <LinearLayout
        android:id="@+id/lo_sof__desc_floating"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@color/very_light_pink"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_sof_summary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="start"
            android:gravity="center_vertical|right"
            style="@style/txt_opensans_r_13_737373"
            android:text="Your Volume: 50T"/>
        <ImageView
            android:id="@+id/iv_sof_desc_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_x_button"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lo_sof_input_floating"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:background="@color/color_5f5f5f"
        android:orientation="horizontal"
        android:visibility="gone">
        <EditText
            android:id="@+id/tx_sof_input_floating"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text=""
            android:inputType="number"
            style="@style/txt_helvetica_r_20_greyishbrown"
            android:background="@drawable/bg_round_corner_white"/>
        <Button
            android:id="@+id/btn_sof_enter_floating"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            style="@style/txt_helvetica_r_16_verylightpink"
            android:text="@string/enter"
            android:textAllCaps="false"
            android:background="@drawable/bg_round_corner_greyish_brown"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_sof_next_floating"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_button_bottom"
        android:gravity="center"
        android:text="@string/next"
        style="@style/txt_opensans_eb_16_white"
        android:textAllCaps="true"
        android:enabled="true"/>
</LinearLayout>