<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="4dp"
    style="@style/CardViewStyle"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_inventory_change_item_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0T"
                style="@style/txt_opensans_b_13_blueviolet"/>
            <TextView
                android:id="@+id/tv_inventory_change_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ASIA - USWC"
                style="@style/txt_opensans_b_16_greyishbrown"/>
            <TextView
                android:id="@+id/tv_inventory_change_item_diff_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:text="0T"
                style="@style/txt_opensans_b_13_greyishbrown"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pale_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                android:id="@+id/pv_inventory_change_item_hgraph_1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="6dp"
                app:progressView_colorBackground="@android:color/transparent"
                app:progressView_colorProgress="@color/very_light_pink"
                app:progressView_labelText=""
                app:progressView_padding="1dp"
                app:progressView_progress="0"
                app:progressView_duration="1000"
                app:progressView_autoAnimate="false"
                app:progressView_radius="15dp"/>
            <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                android:id="@+id/pv_inventory_change_item_hgraph_2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="6dp"
                app:progressView_colorBackground="@android:color/transparent"
                app:progressView_colorProgress="@color/purpley_blue"
                app:progressView_labelText=""
                app:progressView_padding="1dp"
                app:progressView_progress="0"
                app:progressView_duration="1000"
                app:progressView_autoAnimate="false"
                app:progressView_radius="15dp"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>