<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cyberlogitec.freight9.ui.routeselect.select.CustomIndicator
        android:id="@+id/indicator_route_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.asksira.loopingviewpager.LoopingViewPager
        android:id="@+id/viewPager_route_select"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:isInfinite="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_route_select_search_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/iv_route_select_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toolbar_done"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_route_select_search_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_violet"
        android:text="@string/select"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/txt_opensans_eb_16_white"/>


</androidx.constraintlayout.widget.ConstraintLayout>