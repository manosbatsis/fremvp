<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:background="@color/pale_gray">

    <!-- POL - POD card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_order_contract"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">

        <LinearLayout
            android:id="@+id/ll_order_contract_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/txt_opensans_b_13_white"
                android:text="@string/buy_order_select_contract_from_your_inventory"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_contract"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rl_order_contract_logo"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:layout_constraintBottom_toTopOf="@+id/div_order_contract_carrier"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_order_contract_carrier_logo"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/carrier_logo_default_l"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_order_contract_carrier_name"
                        style="@style/txt_opensans_b_15_greyishbrown"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:text=""
                        app:layout_constraintStart_toEndOf="@+id/iv_order_contract_carrier_logo"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_order_contract_carrier_count"
                        style="@style/txt_opensans_b_11_737373"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toEndOf="@+id/tv_order_contract_carrier_name"
                        android:gravity="bottom"
                        android:includeFontPadding="false"
                        android:text=""
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_order_contract_carrier_name"
                        app:layout_constraintStart_toEndOf="@+id/tv_order_contract_carrier_name" />

                    <TextView
                        android:id="@+id/tv_order_contract_carrier_twk"
                        style="@style/txt_opensans_b_15_greyishbrown"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="bottom"
                        android:text="100-500"
                        app:layout_constraintRight_toLeftOf="@+id/tv_order_contract_carrier_twk_unit"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_order_contract_carrier_twk_unit"
                        style="@style/txt_opensans_b_13_737373"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="bottom"
                        android:text="@string/buy_order_contract_unit"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_order_contract_carrier_twk"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/div_order_contract_carrier"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_f2f2f2"
                    app:layout_constraintBottom_toTopOf="@+id/rl_order_contract_pol"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_order_contract_logo"/>

                <RelativeLayout
                    android:id="@+id/rl_order_contract_pol"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    app:layout_constraintVertical_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/div_order_contract_carrier">
                    <TextView
                        android:id="@+id/tv_order_pol_contract_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txt_opensans_eb_18_greyishbrown"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_order_pol_contract_name_count"
                        style="@style/txt_opensans_b_11_737373"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_toRightOf="@+id/tv_order_pol_contract_name"
                        android:layout_alignBottom="@+id/tv_order_pol_contract_name"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_order_pol_contract_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_below="@+id/tv_order_pol_contract_name"
                        style="@style/txt_opensans_r_11_verylightpink"
                        android:text=""/>
                </RelativeLayout>

                <View
                    android:id="@+id/view_pol_pod_contract_hyphen"
                    android:layout_width="10dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/bg_rectangle_4c4c4c"
                    app:layout_constraintStart_toEndOf="@+id/rl_order_contract_pol"
                    app:layout_constraintTop_toBottomOf="@+id/div_order_contract_carrier"/>

                <RelativeLayout
                    android:id="@+id/rl_order_contract_pod"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    app:layout_constraintVertical_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/view_pol_pod_contract_hyphen"
                    app:layout_constraintTop_toBottomOf="@+id/div_order_contract_carrier">
                    <TextView
                        android:id="@+id/tv_order_pod_contract_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txt_opensans_eb_18_greyishbrown"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_order_pod_contract_name_count"
                        style="@style/txt_opensans_b_11_737373"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_toRightOf="@+id/tv_order_pod_contract_name"
                        android:layout_alignBottom="@+id/tv_order_pod_contract_name"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_order_pod_contract_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_below="@+id/tv_order_pod_contract_name"
                        style="@style/txt_opensans_r_11_verylightpink"
                        android:text=""/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintVertical_weight="1"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/rl_order_contract_pod"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/div_order_contract_carrier">
                    <TextView
                        android:id="@+id/tv_order_pol_pod_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W01-W10"
                        style="@style/txt_opensans_b_13_737373"
                        android:layout_alignParentEnd="true"
                        android:visibility="visible"/>
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_whole_white"
                        android:layout_below="@+id/tv_order_pol_pod_period"
                        android:visibility="invisible"/>
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
