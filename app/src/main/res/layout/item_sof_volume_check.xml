<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_week"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical|start"
        android:text="@string/week_cell_hint"
        style="@style/txt_opensans_l_13_greyishbrown"/>

    <ProgressBar
        android:id="@+id/pb_volume_percent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/tv_week"
        android:layout_toStartOf="@+id/tv_offered_value"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:progress="70"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <TextView
        android:id="@+id/tv_offered_value"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/tv_sellable_value"
        android:gravity="center_vertical|end"
        android:text="$300"
        style="@style/txt_opensans_l_13_greyishbrown"/>

    <TextView
        android:id="@+id/tv_sellable_value"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="/999T"
        style="@style/txt_opensans_l_13_greyishbrown"/>

</RelativeLayout>