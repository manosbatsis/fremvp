<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="@color/title_bar">
        <ImageView
            android:id="@+id/iv_booking_calendar_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_x_default"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <com.cyberlogitec.freight9.ui.booking.calendar.components.CustomizableCalendar
            android:id="@+id/view_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout="@layout/calendar"/>

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="50dp"
            android:background="@color/blue_violet"
            android:text="@string/apply"
            android:textAllCaps="true"
            style="@style/txt_opensans_b_16_white"/>

    </LinearLayout>

</LinearLayout>