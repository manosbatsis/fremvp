<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_inventory_contract_detail_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:background="@color/title_bar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/txt_opensans_b_20_white"
            android:text=""
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_inventory_contract_preview_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_x_default"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/hs_inventory_contract_preview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:overScrollMode="never"
        android:layout_below="@+id/rl_inventory_contract_detail_title"
        android:background="@color/color_1d1d1d">
        <LinearLayout
            android:id="@+id/ll_inventory_contract_preview_tab_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_inventory_contract_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_gray"
        android:overScrollMode="never"
        android:layout_below="@+id/hs_inventory_contract_preview"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="69dp"
            android:background="@color/pale_gray">

            <!-- Table View -->
            <LinearLayout
                android:id="@+id/ll_inventory_contract_preview_tab_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- logo, cryCd, Pol, Pod, detail condition, whole route, price table -->
                <include layout="@layout/body_pol_pod_card" />

                <!-- 3rd card : period / volume -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!-- title : Period / volume(owned/total) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <!-- list view title -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="51dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|left"
                                    style="@style/txt_opensans_b_11_greyishbrown"
                                    android:text="@string/volume_period"/>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        style="@style/txt_opensans_b_11_greyishbrown"
                                        android:text="@string/your_inventory_detail_volume"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:layout_marginStart="4dp"
                                        style="@style/txt_opensans_r_11_greyishbrown"
                                        android:text="@string/your_inventory_detail_owned_total"/>
                                </LinearLayout>
                            </LinearLayout>

                            <!-- recycler view -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_inventory_detail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="1dp"
                                android:layout_marginEnd="1dp"
                                android:layout_marginBottom="8dp"
                                android:clipToPadding="false"
                                android:orientation="vertical"
                                android:overScrollMode="never"
                                android:elevation="0dp"
                                android:padding="0dp"
                                android:background="@color/white"
                                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="3dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_inventory_detail_total_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/div_inventory_detail_market_value">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    style="@style/txt_opensans_b_16_greyishbrown"
                                    android:textAllCaps="true"
                                    android:text="@string/your_inventory_detail_total_value"/>
                                <TextView
                                    android:id="@+id/tv_inventory_detail_total_value"
                                    style="@style/txt_opensans_b_16_greyishbrown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical|right"
                                    android:text="$0"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/div_inventory_detail_market_value"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_f2f2f2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ll_inventory_detail_total_value"
                            app:layout_constraintBottom_toTopOf="@+id/ll_inventory_detail_estimated_profit"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/div_inventory_detail_market_value"
                            app:layout_constraintBottom_toTopOf="@+id/ll_inventory_detail_estimated_profit">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                style="@style/txt_opensans_r_13_greyishbrown"
                                android:text="@string/your_inventory_f9_cost_value"/>
                            <TextView
                                android:id="@+id/tv_inventory_detail_f9_cost_value"
                                style="@style/txt_opensans_r_13_greyishbrown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:includeFontPadding="false"
                                android:text="$0"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_inventory_detail_estimated_profit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/div_inventory_detail_market_value"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                style="@style/txt_opensans_r_13_greyishbrown"
                                android:text="@string/your_inventory_estimated_profit"/>
                            <TextView
                                android:id="@+id/tv_inventory_detail_estimate_profit_value"
                                style="@style/txt_opensans_r_13_greyishbrown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:includeFontPadding="false"
                                android:text="$0"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- ############################################################################### -->

            <!-- Grid View -->
            <LinearLayout
                android:id="@+id/ll_inventory_contract_preview_tab_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_order_carrier_more_grid"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="24dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_more"
                    android:visibility="visible"/>

                <com.cyberlogitec.freight9.lib.ui.route.RouteGridView
                    android:id="@+id/gv_inventory_contract_preview_grid_view"
                    android:layout_width="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="40dp"
                    android:layout_height="436dp"/>

                <!-- condition -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- condition title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:includeFontPadding="false"
                        style="@style/txt_opensans_b_20_greyishbrown"
                        android:text="@string/your_inventory_grid_condition"/>

                    <!-- Rd Term -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        style="@style/CardViewStyle"
                        tools:ignore="ContentDescription">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:id="@+id/tv_inventory_contract_preview_condition_rdterm"
                                android:layout_width="match_parent"
                                android:layout_height="39dp"
                                android:gravity="left|center_vertical"
                                style="@style/txt_opensans_b_14_greyishbrown"
                                android:text="@string/buy_order_condition_popup_rd_term"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/div_inventory_contract_preview_condition_rdterm"/>
                            <View
                                android:id="@+id/div_inventory_contract_preview_condition_rdterm"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/color_f2f2f2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_inventory_contract_preview_condition_rdterm"
                                app:layout_constraintBottom_toTopOf="@+id/tv_inventory_contract_preview_condition_rdterm_value"/>
                            <TextView
                                android:id="@+id/tv_inventory_contract_preview_condition_rdterm_value"
                                android:layout_width="match_parent"
                                android:layout_height="47dp"
                                android:gravity="left|center_vertical"
                                style="@style/txt_opensans_r_15_595959"
                                android:text="CY­CY, CY­Door"
                                app:layout_constraintTop_toBottomOf="@+id/div_inventory_contract_preview_condition_rdterm"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Pay Plan -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        style="@style/CardViewStyle"
                        tools:ignore="ContentDescription">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:id="@+id/tv_inventory_contract_preview_condition_payplan"
                                android:layout_width="match_parent"
                                android:layout_height="39dp"
                                android:gravity="left|center_vertical"
                                style="@style/txt_opensans_b_14_greyishbrown"
                                android:text="@string/buy_order_condition_popup_pay_plan"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/div_inventory_contract_preview_condition_payplan"/>
                            <View
                                android:id="@+id/div_inventory_contract_preview_condition_payplan"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/color_f2f2f2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_inventory_contract_preview_condition_payplan"
                                app:layout_constraintBottom_toTopOf="@+id/tv_inventory_contract_preview_condition_payplan_value"/>
                            <TextView
                                android:id="@+id/tv_inventory_contract_preview_condition_payplan_value"
                                android:layout_width="match_parent"
                                android:layout_height="47dp"
                                android:gravity="left|center_vertical"
                                style="@style/txt_opensans_r_15_595959"
                                android:text="Prepaid (30% ­ 60% ­ 10%)"
                                app:layout_constraintTop_toBottomOf="@+id/div_inventory_contract_preview_condition_payplan"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Container type -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        style="@style/CardViewStyle"
                        tools:ignore="ContentDescription">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:id="@+id/tv_inventory_contract_preview_condition_container"
                                android:layout_width="match_parent"
                                android:layout_height="39dp"
                                android:gravity="left|center_vertical"
                                style="@style/txt_opensans_b_14_greyishbrown"
                                android:text="@string/buy_order_condition_popup_container_type"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/div_inventory_contract_preview_condition_container"/>
                            <View
                                android:id="@+id/div_inventory_contract_preview_condition_container"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/color_f2f2f2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_inventory_contract_preview_condition_container"
                                app:layout_constraintBottom_toTopOf="@+id/ll_inventory_contract_preview_condition_container_value"/>

                            <LinearLayout
                                android:id="@+id/ll_inventory_contract_preview_condition_container_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="vertical"
                                app:layout_constraintTop_toBottomOf="@+id/div_inventory_contract_preview_condition_container"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Carrier -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        style="@style/CardViewStyle"
                        tools:ignore="ContentDescription">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:id="@+id/tv_inventory_contract_preview_condition_carrier"
                                android:layout_width="match_parent"
                                android:layout_height="39dp"
                                android:gravity="left|center_vertical"
                                style="@style/txt_opensans_b_14_greyishbrown"
                                android:text="@string/buy_order_condition_popup_carrier"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@+id/div_inventory_contract_preview_condition_carrier"/>
                            <View
                                android:id="@+id/div_inventory_contract_preview_condition_carrier"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/color_f2f2f2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_inventory_contract_preview_condition_carrier"
                                app:layout_constraintBottom_toTopOf="@+id/tv_inventory_contract_preview_condition_carrier_value"/>
                            <TextView
                                android:id="@+id/tv_inventory_contract_preview_condition_carrier_value"
                                android:layout_width="match_parent"
                                android:layout_height="47dp"
                                android:gravity="left|center_vertical"
                                style="@style/txt_opensans_r_15_595959"
                                android:text="maersk"
                                app:layout_constraintTop_toBottomOf="@+id/div_inventory_contract_preview_condition_carrier"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_inventory_contract_preview_view_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_bottom_enable_disable"
            android:gravity="center"
            android:visibility="visible"
            android:textAllCaps="true"
            android:text="@string/your_inventory_contract_preview_view_detail"
            style="@style/txt_opensans_b_16_white"/>
    </LinearLayout>
</RelativeLayout>