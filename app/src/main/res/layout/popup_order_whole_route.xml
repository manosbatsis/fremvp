<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="@color/title_bar">
        <!-- android:text="@string/buy_order_whole_route_popup_title" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/txt_opensans_eb_20_white"
            android:text="@string/buy_order_whole_route_popup_title"/>
        <ImageView
            android:id="@+id/iv_order_whole_route_close"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginEnd="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/default_d"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/sv_whole_route_tab_horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:overScrollMode="never"
        android:background="@color/color_1d1d1d"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_whole_route_tab_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/sv_whole_route_table_lane_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:background="@android:color/transparent"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"/>
            <LinearLayout
                android:id="@+id/ll_whole_route_table_lane_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal"/>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_whole_route_tab_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pale_gray"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:background="@color/pale_gray">

            <!-- Table View -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                style="@style/CardViewStyle"
                tools:ignore="ContentDescription"
                android:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_whole_route_tab_table_row_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_round_corner_greyish_left_right_top"
                        android:elevation="3dp"
                        app:layout_constraintBottom_toTopOf="@+id/ll_whole_route_tab_table_row_lists"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                style="@style/txt_opensans_b_13_white"
                                android:text="@string/buy_order_whole_route_port"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.83"
                                android:gravity="center"
                                style="@style/txt_opensans_b_13_white"
                                android:text="@string/buy_order_whole_route_arrive"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                style="@style/txt_opensans_b_13_white"
                                android:text="@string/buy_order_whole_route_departure"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 동적으로 레이아웃 추가한다. -->
                    <LinearLayout
                        android:id="@+id/ll_whole_route_tab_table_row_lists"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_whole_route_tab_table_row_title">
                        <!-- 동적으로 레이아웃 추가한다. -->
                        <LinearLayout
                            android:id="@+id/ll_whole_route_tab_table_row_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="vertical">
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- ############################################################################### -->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Grid View -->
    <LinearLayout
        android:id="@+id/ll_whole_route_tab_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:visibility="visible">
        <com.cyberlogitec.freight9.lib.ui.route.RouteGridView
            android:id="@+id/gv_whole_route_grid_view"
            android:layout_width="match_parent"
            android:layout_height="436dp"/>
    </LinearLayout>

</LinearLayout>