<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="55dp"
    android:layout_width="wrap_content"
    android:background="@color/title_bar"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_item_filter"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/selector_button_market_filter">

        <TextView
            android:id="@+id/tv_filter_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            style="@style/txt_opensans_eb_10_white"
            android:text=""/>

        <TextView
            android:id="@+id/tv_filter_value_duration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            style="@style/txt_opensans_b_10_white"
            android:text=""
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>