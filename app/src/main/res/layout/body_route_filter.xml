<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.inventory.RouteFilterActivity"
    tools:showIn="@layout/act_route_filter">

    <!-- Week Horizontal tab -->
    <LinearLayout
        android:id="@+id/ll_hsv_route_filter_weekof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_1d1d1d"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_ll_route_filter_filter"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible">
        <HorizontalScrollView
            android:id="@+id/hsv_route_filter_weekof"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:overScrollMode="never"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <LinearLayout
                android:id="@+id/ll_route_filter_weekof"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Filter -->
    <LinearLayout
        android:id="@+id/ll_ll_route_filter_filter"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical|right"
        android:background="@color/color_1d1d1d"
        app:layout_constraintTop_toBottomOf="@+id/ll_hsv_route_filter_weekof"
        app:layout_constraintBottom_toTopOf="@+id/ll_recycler_route_filter_result"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_route_filter_filter"
            android:layout_width="63dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle_4c4c4c_border_8">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:src="@drawable/filter"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Recycler -->
    <LinearLayout
        android:id="@+id/ll_recycler_route_filter_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/pale_gray"
        app:layout_constraintTop_toBottomOf="@id/ll_ll_route_filter_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_route_filter_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:overScrollMode="never"
            android:elevation="0dp"/>
    </LinearLayout>
    <!--android:paddingBottom="70dp"-->

</androidx.constraintlayout.widget.ConstraintLayout>