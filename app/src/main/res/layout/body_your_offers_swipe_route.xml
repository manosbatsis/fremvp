<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/pale_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cyberlogitec.freight9.lib.ui.route.RouteGridView
                android:id="@+id/route_grid_view"
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="40dp"
                android:layout_height="436dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="20dp"
                android:text="@string/buy_order_condition_popup_title"
                style="@style/txt_opensans_eb_25_greyishbrown"/>

            <!-- Carrier -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                style="@style/CardViewStyle"
                tools:ignore="ContentDescription">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_b_15_greyishbrown"
                        android:text="@string/buy_order_condition_popup_carrier"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f2f2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/iv_carrier_logo"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/carrier_logo_default_l"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/tv_carrier"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                            <TextView
                                android:id="@+id/tv_carrier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="2dp"
                                android:gravity="center_vertical"
                                style="@style/txt_opensans_b_15_greyishbrown"
                                android:text="@string/all_carriers"
                                app:layout_constraintLeft_toRightOf="@+id/iv_carrier_logo"
                                app:layout_constraintRight_toLeftOf="@+id/tv_carrier_desc"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                            <TextView
                                android:id="@+id/tv_carrier_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                style="@style/txt_opensans_r_10_greyishbrown"
                                app:layout_constraintBaseline_toBaselineOf="@+id/tv_carrier"
                                android:text=""
                                app:layout_constraintLeft_toRightOf="@+id/tv_carrier"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- RdTerm -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                style="@style/CardViewStyle"
                tools:ignore="ContentDescription">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_b_15_greyishbrown"
                        android:text="@string/buy_order_condition_popup_rd_term"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f2f2"/>
                    <TextView
                        android:id="@+id/tv_rdterm"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="6dp"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_r_15_595959"
                        android:text=""/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ContainerType & Size -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                style="@style/CardViewStyle"
                tools:ignore="ContentDescription">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_b_15_greyishbrown"
                        android:text="@string/popup_offer_container_type_size"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f2f2"/>
                    <!-- item height = 30dp / center_vertical -->
                    <LinearLayout
                        android:id="@+id/ll_containertype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="11dp"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                style="@style/CardViewStyle"
                tools:ignore="ContentDescription">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_b_15_greyishbrown"
                        android:text="@string/buy_order_condition_popup_pay_plan"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f2f2"/>

                    <TextView
                        android:id="@+id/tv_pay_plan"
                        style="@style/txt_opensans_r_15_595959"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="6dp"
                        android:gravity="left|center_vertical"
                        android:text="" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/txt_opensans_r_11_737373"
                android:text="@string/buy_order_condition_popup_go_calendar_pay"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_view_detail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center|bottom"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="20dp"
                style="@style/txt_opensans_eb_16_white"
                android:background="@drawable/selector_button_bottom"
                android:text="@string/your_inventory_contract_preview_view_detail"
                android:textAllCaps="true"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
