<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_gray"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <include layout="@layout/body_your_offers_detail_recycler_card"/>

    <!-- Dealt, Estimated Cost Value -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_view_offer_dealt_estimated_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_dealt_cost_value_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    style="@style/txt_opensans_r_13_595959"
                    android:text="@string/your_offer_dealt_cost_value"/>
                <TextView
                    android:id="@+id/tv_dealt_cost_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    style="@style/txt_opensans_b_13_595959"
                    android:text="$0"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f2f2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:paddingBottom="6dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_estimated_total_cost_value_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    style="@style/txt_opensans_r_13_595959"
                    android:text="@string/your_offer_estimated_total_cost_value"/>
                <TextView
                    android:id="@+id/tv_estimated_total_cost_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    style="@style/txt_opensans_b_13_595959"
                    android:text="$0"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_whole_deal_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="0dp"
        android:background="@color/pale_gray">
        <TextView
            android:id="@+id/tv_whole_deal_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_whole_deal_options"
            style="@style/txt_opensans_b_15_greyishbrown"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:text="@string/whole_deal_option_selected_desc"
            style="@style/txt_opensans_r_13_greyishbrown"/>
    </LinearLayout>

    <!-- View Offer History -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_view_offer_history"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:text="@string/dashboard_view_offer_history"
            style="@style/txt_opensans_b_15_565656"/>
        <ImageView
            android:id="@+id/iv_view_offer_history"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/btn_go_default_l"/>
    </androidx.cardview.widget.CardView>

    <!-- View Transaction Statement -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_view_transaction_statement"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:text="@string/dashboard_view_transaction_statement"
            style="@style/txt_opensans_b_15_565656"/>
        <ImageView
            android:id="@+id/iv_view_transaction_statement"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/btn_go_default_l"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@color/pale_gray"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_make_a_new_offer_using_this_condition"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            style="@style/txt_opensans_semib_13_greyishbrown"
            android:text="@string/buy_order_select_new_sell_offer"
            android:background="@drawable/bg_round_corner_greyish_brown_fill_pale"/>
    </LinearLayout>
 </LinearLayout>