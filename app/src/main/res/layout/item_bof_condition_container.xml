                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|start"
                android:text="@string/filter_container_title_type"
                style="@style/txt_opensans_eb_25_greyishbrown"/>
        </RelativeLayout>
    </LinearLayout>

