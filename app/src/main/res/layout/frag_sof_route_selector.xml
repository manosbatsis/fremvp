<?xml version="1.0" encoding="utf-8"?>
<!-- 우측 레이아웃 -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/title_bar"
        >

        <!-- 바탕 그림 -->
        <ImageView
            android:id="@+id/selector_image"
            android:layout_width="250dp"
            android:layout_height="127dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,250:127"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/fromto_default"
            />

        <!-- 텍스트 상자  -->
        <LinearLayout
            android:id="@+id/lo_menu_right_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNSHA"
                style="@style/txt_opensans_b_18_black"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shanghai, Chaina"
                style="@style/txt_opensans_l_10_black"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="USLAX"
                style="@style/txt_opensans_b_18_black"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Los Angeles, US"
                style="@style/txt_opensans_l_10_black"
                android:singleLine="true"/>


        </LinearLayout>

        <!-- Quote Mark -->
        <ImageView
            android:layout_width="12dp"
            android:layout_height="17dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="@+id/selector_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/fromto_comma"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>