<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_gray"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_filter_item_category"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:includeFontPadding="false"
        android:gravity="left|bottom"
        style="@style/txt_opensans_b_13_verylightpink"
        android:text=""
        android:visibility="visible"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_filter_carrier_logo"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_constraintBottom_toTopOf="@+id/div_filter_carrier"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >
                <ImageView
                    android:id="@+id/iv_filter_carrier_logo"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/carrier_logo_default_l"/>
                <TextView
                    android:id="@+id/tv_filter_carrier_name"
                    style="@style/txt_opensans_b_15_greyishbrown"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:includeFontPadding="false"
                    android:gravity="bottom"
                    android:layout_toEndOf="@+id/iv_filter_carrier_logo"
                    android:text=""/>
                <TextView
                    style="@style/txt_opensans_b_11_737373"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="2dp"
                    android:includeFontPadding="false"
                    android:gravity="bottom"
                    android:layout_toEndOf="@+id/tv_filter_carrier_name"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_filter_container_amount"
                        style="@style/txt_opensans_b_15_greyishbrown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toLeftOf="@+id/tv_filter_container_twk_unit"/>
                    <TextView
                        android:id="@+id/tv_filter_container_twk_unit"
                        style="@style/txt_opensans_b_13_737373"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/buy_order_contract_unit"
                        android:layout_alignParentEnd="true"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/div_filter_carrier"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f4f9"
                app:layout_constraintBottom_toTopOf="@+id/rl_filter_pol"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_filter_carrier_logo"/>

            <RelativeLayout
                android:id="@+id/rl_filter_pol"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_filter_carrier">

                <TextView
                    android:id="@+id/tv_filter_pol_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_opensans_eb_18_greyishbrown"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_filter_pol_count"
                    style="@style/txt_opensans_b_11_737373"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/tv_filter_pol_code"
                    android:layout_alignBottom="@+id/tv_filter_pol_code"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_filter_pol_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_filter_pol_code"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="-4dp"
                    style="@style/txt_opensans_r_11_verylightpink"
                    android:text=""/>
            </RelativeLayout>

            <View
                android:id="@+id/view_pol_pod_hyphen"
                android:layout_width="15dp"
                android:layout_height="3dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_rectangle_4c4c4c"
                app:layout_constraintStart_toEndOf="@+id/rl_filter_pol"
                app:layout_constraintTop_toBottomOf="@+id/div_filter_carrier"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintStart_toEndOf="@+id/view_pol_pod_hyphen"
                app:layout_constraintTop_toBottomOf="@+id/div_filter_carrier">
                <TextView
                    android:id="@+id/tv_filter_pod_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_opensans_eb_18_greyishbrown"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_filter_pod_count"
                    style="@style/txt_opensans_b_11_737373"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/tv_filter_pod_code"
                    android:layout_alignBottom="@+id/tv_filter_pod_code"
                    android:text=""/>
                <TextView
                    android:id="@+id/tv_filter_pod_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_filter_pod_code"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="-4dp"
                    style="@style/txt_opensans_r_11_verylightpink"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_filter_kind_weekof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_filter_carrier">
                <TextView
                    android:id="@+id/tv_filter_weekof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/txt_opensans_b_13_737373"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginEnd="10dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_filter_kind_weekof">
                <ImageView
                    android:id="@+id/iv_filter_period_whole"
                    android:layout_width="36dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_whole_white"
                    android:visibility="invisible"/>
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>