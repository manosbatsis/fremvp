<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cargo_tracking_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.cargotracking.CargoTrackingActivity"
    tools:showIn="@layout/act_cargo_tracking">

    <LinearLayout
        android:id="@+id/ll_cargo_tracking_filter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/pale_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_recycler_cargo_tracking_list">

        <!-- top select list -->
        <RelativeLayout
            android:id="@+id/rl_cargo_tracking_filter_list"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical|top"
            android:background="@color/color_1d1d1d"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_cargo_tracking_filter_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:background="@color/title_bar"
                android:layout_toStartOf="@+id/iv_cargo_tracking_filter"
                android:orientation="horizontal"/>

            <View
                android:id="@+id/view_left_gradation"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/service_pol_horizontal_gradient_5640e7"
                android:visibility="gone"/>

            <View
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv_cargo_tracking_filter"
                android:background="@drawable/service_pol_horizontal_gradient_1d1d1d"/>

            <ImageView
                android:id="@+id/iv_cargo_tracking_filter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:src="@drawable/btn_filter_default_d"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recycler_cargo_tracking_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_gray"
        app:layout_constraintTop_toBottomOf="@id/ll_cargo_tracking_filter_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cargo_tracking_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="76dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:overScrollMode="never"
            android:elevation="0dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
