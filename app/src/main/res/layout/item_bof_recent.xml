<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_gray"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_bof_recenet_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <LinearLayout
            android:id="@+id/ll_item_bof_recenet_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_round_white_corner_blueviolet">

            <RelativeLayout
                android:id="@+id/rl_pol"
                android:layout_width="107dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_pol_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_opensans_eb_18_greyishbrown"
                    android:text="TWGMI"/>
                <TextView
                    android:id="@+id/tv_pol_count"
                    style="@style/txt_opensans_b_11_737373"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@+id/tv_pol_name"
                    android:layout_alignBottom="@+id/tv_pol_name"
                    android:text="+3"
                    android:visibility="visible"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pol_name"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tv_pol_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="1dp"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:text="Guanmiao Townshij"
                        style="@style/txt_opensans_r_11_verylightpink"/>
                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/carrier_text_gradient_white"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_pol_pod_hyphen"
                android:layout_width="10dp"
                android:layout_height="3dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/bg_rectangle_4c4c4c"/>

            <RelativeLayout
                android:id="@+id/rl_pod"
                android:layout_width="107dp"
                android:layout_height="56dp"
                android:layout_marginStart="11dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_pod_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_opensans_eb_18_greyishbrown"
                    android:text="CNSHA"/>
                <TextView
                    android:id="@+id/tv_pod_count"
                    style="@style/txt_opensans_b_11_737373"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@+id/tv_pod_name"
                    android:layout_alignBottom="@+id/tv_pod_name"
                    android:text="+2"
                    android:visibility="visible"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pod_name"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/tv_pod_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="1dp"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:text="Shanghai, China ASDF"
                        style="@style/txt_opensans_r_11_verylightpink"/>
                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/carrier_text_gradient_white"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>