<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    tools:context=".ui.buyoffer.BofVolumeAct"
    tools:showIn="@layout/act_bof_volume"
    android:gravity="center_vertical">
    <LinearLayout
        android:id="@+id/ll_bottom_btn_floating"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:visibility="visible">
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_bottom_enable_disable"
            android:gravity="center"
            android:visibility="visible"
            android:enabled="false"
            android:text="@string/next"
            style="@style/txt_opensans_eb_16_white"/>
    </LinearLayout>

    <include layout="@layout/bottom_batch_input"/>
</LinearLayout>