<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.buyoffer.BofConditionCheckAct"
    tools:showIn="@layout/act_bof_condition_check"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
		android:id="@+id/sv_tab_horizontal"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:overScrollMode="never"
		android:background="@color/color_1d1d1d"
		android:visibility="visible">
		<LinearLayout
			android:id="@+id/ll_tab_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginStart="3dp"
			android:orientation="horizontal"/>
	</HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_bof_condition_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_gray">

        <!-- background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/pale_gray">

            <!-- background -->
            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="61dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_round_corner_737373"
                android:layout_gravity="right"
                android:gravity="center"
                style="@style/txt_opensans_b_14_737373"
                android:text="@string/edit"/>

            <!--Container Detail-->
            <LinearLayout
                android:id="@+id/bof_condition_check_container_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- RdTerm -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="6dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_b_15_greyishbrown"
                            android:text="@string/buy_order_condition_popup_rd_term"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_f2f2f2"/>
                        <TextView
                            android:id="@+id/tv_offer_condition_rdterm"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginBottom="6dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_r_15_595959"
                            android:text=""/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ContainerType & Size -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="6dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_b_15_greyishbrown"
                            android:text="@string/popup_offer_container_type_size"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_f2f2f2"/>
                        <LinearLayout
                            android:id="@+id/ll_offer_condition_containertype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="24dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="6dp"
                            android:gravity="left|center_vertical"
                            style="@style/txt_opensans_b_15_greyishbrown"
                            android:text="@string/buy_offer_preferred_carrier"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_f2f2f2"/>
                        <LinearLayout
                            android:id="@+id/ll_offer_condition_carriers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--Pay Plan-->
            <LinearLayout
                android:id="@+id/bof_condition_check_payplan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="24dp"
                    style="@style/CardViewStyle"
                    tools:ignore="ContentDescription">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <!-- Prepaid -->
                            <TextView
                                android:id="@+id/tv_payment_term"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginStart="16dp"
                                android:text="Prepaid"
                                style="@style/txt_opensans_b_15_greyishbrown"/>
                            <ImageView
                                android:id="@+id/iv_check_mark"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="4dp"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_information_white"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/color_f2f4f9"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="139dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:gravity="bottom"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_initial_payment"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:gravity="top"
                                        android:text="0%"
                                        style="@style/txt_opensans_eb_18_greyishbrown"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="bottom"
                                        android:text="@string/sof_initial_deal_date"
                                        style="@style/txt_opensans_r_11_greyishbrown"/>
                                    <TextView
                                        android:id="@+id/tv_initial_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"
                                        android:text="$0"
                                        style="@style/txt_opensans_r_13_greyishbrown"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_midterm_payment"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:gravity="bottom"
                                        android:text="0%"
                                        style="@style/txt_opensans_eb_18_greyishbrown"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="bottom"
                                        android:text="@string/sof_midterm"
                                        style="@style/txt_opensans_r_11_greyishbrown"/>
                                    <TextView
                                        android:id="@+id/tv_midterm_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"
                                        android:text="$0"
                                        style="@style/txt_opensans_r_13_greyishbrown"/>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:gravity="bottom"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_ramainder_payment"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:gravity="bottom"
                                        android:text="0%"
                                        style="@style/txt_opensans_eb_18_greyishbrown"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginBottom="2dp"
                                        android:gravity="bottom"
                                        android:text="@string/sof_remainder_n_balance"
                                        style="@style/txt_opensans_r_11_greyishbrown"/>
                                    <TextView
                                        android:id="@+id/tv_ramainder_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"
                                        android:text="$0"
                                        style="@style/txt_opensans_r_13_greyishbrown"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/color_f2f4f9"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="16dp"
                                android:textAllCaps="true"
                                android:text="@string/selloffer_total_deal_amount"
                                style="@style/txt_opensans_b_16_greyishbrown"/>
                            <TextView
                                android:id="@+id/tv_deal_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="16dp"
                                android:text="$0"
                                style="@style/txt_opensans_b_16_greyishbrown"/>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_collect_condition_on_calendar"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="@string/view_collect_plan_on_calendar"
                style="@style/txt_opensans_r_15_737373"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>