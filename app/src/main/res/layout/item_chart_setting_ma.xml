<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_1a1a1a">
    <Space
        android:id="@+id/space_top"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_header_title"
        android:layout_width="match_parent"
        android:layout_height="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txt_opensans_b_11_greyishbrown"
            android:layout_marginStart="63dp"
            android:text="@string/table_title_period"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txt_opensans_b_11_greyishbrown"
            android:layout_marginStart="156dp"
            android:text="@string/market_watch_settin_Offset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_market_filter_item"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="0dp"
        android:gravity="center_vertical"
        android:duplicateParentState="true"
        android:background="@color/color_1a1a1a"
        >

        <ImageView
            android:id="@+id/v_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_ma_blue_default_32_x_32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_period"
            style="@style/txt_opensans_b_15_595959"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:inputType="number"
            android:textAlignment="center"
            android:text=""
            android:textColor="@drawable/selector_edittext_font_marketwatch_ma"
            android:background="@drawable/selector_edittext_marketwatch_ma"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/v_color"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/et_offset"
            style="@style/txt_opensans_b_15_595959"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textColor="@drawable/selector_edittext_font_marketwatch_ma"
            android:background="@drawable/selector_edittext_marketwatch_ma"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_period"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_select"
            style="@style/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Space
        android:id="@+id/space_bottom"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

</LinearLayout>