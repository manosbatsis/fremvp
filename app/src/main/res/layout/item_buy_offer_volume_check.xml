<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_gray">

    <LinearLayout
        android:id="@+id/ll_volume_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_week_item"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    style="@style/txt_opensans_r_13_greyishbrown"
                    android:text="W00"/>
                <TextView
                    android:id="@+id/tv_week_date_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    style="@style/txt_opensans_r_11_979797"
                    android:text="'2020-02-02"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_volume_input_item"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:paddingEnd="4dp"
                    android:gravity="center_vertical|right"
                    android:text="300 T"
                    style="@style/txt_opensans_r_13_greyishbrown"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>