<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_body_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:background="@color/pale_gray"
    tools:context=".ui.buyoffer.BofConditionAct"
    tools:showIn="@layout/act_bof_condition"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="72dp"
        android:orientation="vertical"
        android:background="@color/pale_gray">

        <!--  plan -->
        <include layout="@layout/item_bof_condition_plan"/>

        <!-- rdterm -->
        <include layout="@layout/item_bof_condition_rdterm"/>

        <!-- carrier -->
        <include layout="@layout/item_bof_condition_carrier"/>

        <!-- container-type -->
        <include layout="@layout/item_bof_condition_container"/>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>