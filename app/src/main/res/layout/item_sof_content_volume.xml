<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_sof_content_volume"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="0dp"
    android:background="@color/white"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/chk_period"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="0dp"
            android:checked="false"
            android:enabled="true"
            android:focusable="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:button="@android:color/transparent"
            android:background="@drawable/selector_checkbox_sof_volume"
            />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="26dp"
            android:gravity="center_vertical"
            android:hint="@string/week_cell_hint"
            android:layout_toEndOf="@id/chk_period"
            style="@style/txt_opensans_r_13_greyishbrown"/>

        <ProgressBar
            android:id="@+id/pb_volume_percent"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:progress="70"
            android:layout_toStartOf="@id/tv_volume"
            android:layout_toEndOf="@id/tv_week"
            style="?android:attr/progressBarStyleHorizontal" />

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:layout_marginStart="26dp"
            android:gravity="center"
            android:text=""
            android:layout_toStartOf="@id/tv_max_volume"
            style="@style/txt_opensans_l_13_greyishbrown"
            android:background="@drawable/bg_round_corner_pale_gray"/>

        <TextView
            android:id="@+id/tv_max_volume"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:text="/999T"
            style="@style/txt_opensans_r_13_greyishbrown" />
    </RelativeLayout>

</LinearLayout>


