<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/item_bof_content_search"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_bof_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/pale_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cd"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:layout_marginStart="40dp"
            android:text="FE1"
            style="@style/txt_opensans_eb_16_greyishbrown"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pod_name"
            android:layout_marginEnd="13dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:ellipsize="none"
                android:text=""
                style="@style/txt_opensans_r_13_greyishbrown"/>
            <View
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/service_lane_text_gradient_f2f4f9"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
