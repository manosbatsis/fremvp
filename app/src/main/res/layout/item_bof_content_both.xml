<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/item_bof_content_pol"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lo_bof_content_pol"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/pale_gray"
        android:orientation="vertical">

        <!-- PolCd ~ PodCd-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pol_cd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/vw_route_seprator"
                android:gravity="center_vertical|bottom"
                android:text="@string/pol_cd_hint"
                style="@style/txt_opensans_eb_20_greyishbrown"/>

            <View
                android:id="@+id/vw_route_seprator"
                android:layout_width="15dp"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:background="@color/greyish_brown"/>

            <TextView
                android:id="@+id/tv_pod_cd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/vw_route_seprator"
                android:gravity="center_vertical|bottom"
                android:text="@string/pod_cd_hint"
                style="@style/txt_opensans_eb_20_greyishbrown"/>

        </RelativeLayout>

        <!-- PolNm ~ PodNm-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pol_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/vw_route_name_seprator"
                android:gravity="center_vertical|top"
                android:text="@string/pol_name_hint"
                style="@style/txt_opensans_r_11_bfbfbf"/>

            <View
                android:id="@+id/vw_route_name_seprator"
                android:layout_width="15dp"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_pod_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/vw_route_name_seprator"
                android:gravity="center_vertical|top"
                android:text="@string/pod_name_hint"
                style="@style/txt_opensans_r_11_bfbfbf"/>
        </RelativeLayout>

    </LinearLayout>


</FrameLayout>
