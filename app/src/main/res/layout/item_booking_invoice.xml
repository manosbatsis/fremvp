<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/color_ffffffff"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/tv_payment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txt_opensans_b_15_4c4c4c"
                        android:text="@string/finance_filter_transaction_statement_type_init"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/iv_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/btn_expand_default_l"/>

                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f4f9"/>

            <LinearLayout
                android:id="@+id/ll_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_opensans_b_11_4c4c4c"
                            android:text="@string/booking_dashboard_blinvoice_invoiceno"/>
                        <TextView
                            android:id="@+id/tv_expand_invoice_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="113dp"
                            style="@style/txt_opensans_r_11_4c4c4c"
                            android:text="HKSO144888"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f4f9"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_opensans_b_11_4c4c4c"
                            android:text="@string/booking_dashboard_blinvoice_seller_phone_no"/>
                        <TextView
                            android:id="@+id/tv_expand_seller_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="113dp"
                            style="@style/txt_opensans_r_11_4c4c4c"
                            android:text="+82 10 0000 0000"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f4f9"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_opensans_b_11_4c4c4c"
                            android:text="@string/booking_dashboard_blinvoice_seller_email"/>
                        <TextView
                            android:id="@+id/tv_expand_seller_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="113dp"
                            style="@style/txt_opensans_r_11_4c4c4c"
                            android:text="Freight9@cyberlogitec.com"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f4f9"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            style="@style/txt_opensans_b_11_4c4c4c"
                            android:text="@string/booking_dashboard_blinvoice_seller_address"/>
                        <TextView
                            android:id="@+id/tv_expand_seller_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="113dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="11dp"
                            style="@style/txt_opensans_r_11_4c4c4c"
                            android:text="396, World Cup buk-ro, Mapo-gu,\nSeoul, Republic of Korea\nZip # 07072"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f4f9"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            style="@style/txt_opensans_b_11_4c4c4c"
                            android:text="@string/booking_dashboard_blinvoice_buyer_address"/>
                        <TextView
                            android:id="@+id/tv_expand_buyer_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="113dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="11dp"
                            style="@style/txt_opensans_r_11_4c4c4c"
                            android:text="396, World Cup buk-ro, Mapo-gu,\nSeoul, Republic of Korea\nZip # 07072"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f4f9"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_opensans_b_11_4c4c4c"
                            android:text="@string/booking_dashboard_blinvoice_date_issue"/>
                        <TextView
                            android:id="@+id/tv_expand_date_issue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="113dp"
                            style="@style/txt_opensans_r_11_4c4c4c"
                            android:text="2020/10/18"/>
                    </RelativeLayout>


                </LinearLayout>
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@color/color_f2f4f9">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:maxLines="1"
                        android:text="@string/booking_dashboard_si_description"
                        style="@style/txt_opensans_b_11_4c4c4c"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="137dp"
                        android:maxLines="1"
                        android:text="@string/booking_dashboard_blinvoice_unit_cost"
                        style="@style/txt_opensans_b_11_4c4c4c"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="93dp"
                        android:maxLines="1"
                        android:text="@string/booking_dashboard_blinvoice_qty"
                        style="@style/txt_opensans_b_11_4c4c4c"/>

                    <TextView
                        android:id="@+id/tv_item_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="24dp"
                        android:maxLines="1"
                        android:text="@string/booking_dashboard_blinvoice_amount"
                        style="@style/txt_opensans_b_11_4c4c4c"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="21dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_bfbfbf"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_invoice_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:background="@color/color_f2f4f9">

                    <TextView
                        android:id="@+id/textView24"
                        style="@style/txt_opensans_r_11_4c4c4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:text="@string/booking_dashboard_blinvoice_subtotal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_invoice_subtotal"
                        style="@style/txt_opensans_r_11_4c4c4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="24dp"
                        android:maxLines="1"
                        android:text="$4,000.00"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        style="@style/txt_opensans_r_11_4c4c4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="34dp"
                        android:maxLines="1"
                        android:text="@string/booking_dashboard_blinvoice_tax"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_invoice_tax"
                        style="@style/txt_opensans_r_11_4c4c4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="34dp"
                        android:layout_marginEnd="24dp"
                        android:maxLines="1"
                        android:text="$520.00"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        style="@style/txt_opensans_r_11_4c4c4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="58dp"
                        android:maxLines="1"
                        android:text="@string/booking_dashboard_blinvoice_total"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_expand_invoice_total"
                        style="@style/txt_opensans_r_11_4c4c4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="58dp"
                        android:layout_marginEnd="24dp"
                        android:maxLines="1"
                        android:text="$4520.00"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_opensans_b_11_4c4c4c"
                    android:text="@string/booking_dashboard_blinvoice_invoice_total"/>
                <TextView
                    android:id="@+id/tv_invoice_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="113dp"
                    android:layout_marginEnd="8dp"
                    android:layout_alignParentEnd="true"
                    style="@style/txt_opensans_b_11_4c4c4c"
                    android:text="$4520.00"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
