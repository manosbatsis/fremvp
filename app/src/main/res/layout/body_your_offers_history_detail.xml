<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_your_offers_history_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.youroffers.YourOffersHistoryDetailActivity"
    tools:showIn="@layout/act_your_offers_history_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="76dp"
        android:orientation="vertical"
        android:background="@color/pale_gray">

        <include layout="@layout/body_pol_pod_card" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/CardViewStyle"
            tools:ignore="ContentDescription">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="11dp">
                <!-- Event -->
                <LinearLayout
                    android:id="@+id/ll_event"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/ll_status">
                    <TextView
                        android:id="@+id/tv_event_title"
                        android:layout_width="84dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        style="@style/txt_opensans_b_15_595959"
                        android:text="@string/your_offers_history_detail_event"/>
                    <TextView
                        android:id="@+id/tv_event_value"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        style="@style/txt_opensans_b_13_blue_violet"/>
                </LinearLayout>
                <!-- Status -->
                <LinearLayout
                    android:id="@+id/ll_status"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/ll_event"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:id="@+id/tv_status_title"
                        android:layout_width="84dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        style="@style/txt_opensans_b_15_595959"
                        android:text="@string/your_offers_history_detail_status"/>
                    <TextView
                        android:id="@+id/tv_status_value"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        style="@style/txt_opensans_r_13_595959"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="right"
            android:text="2019-12-23 13:20 by Cyberlogitec"
            style="@style/txt_opensans_r_13_bfbfbf"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/CardViewStyle"
            tools:ignore="ContentDescription">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_recycler_top"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical"
                    style="@style/txt_opensans_b_15_greyishbrown"
                    android:text="@string/your_offers_history_detail_period_volume"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/vw_recycler_top_divider"/>

                <View
                    android:id="@+id/vw_recycler_top_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_f2f2f2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_recycler_top"
                    app:layout_constraintBottom_toTopOf="@+id/ll_recycler"/>

                <LinearLayout
                    android:id="@+id/ll_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vw_recycler_top_divider"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <!-- list view title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_recycler_title1"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            style="@style/txt_opensans_b_11_greyishbrown"
                            android:text="@string/your_offers_history_detail_title_period"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.3"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_recycler_title2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.35"
                                android:gravity="center_vertical|right"
                                style="@style/txt_opensans_b_11_greyishbrown"
                                android:text="@string/your_offers_history_detail_title_price"/>
                            <TextView
                                android:id="@+id/tv_recycler_title3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                style="@style/txt_opensans_b_11_greyishbrown"
                                android:text="@string/left"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_recycler_title4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3.2"
                            android:gravity="center_vertical|right"
                            style="@style/txt_opensans_b_11_greyishbrown"
                            android:text="@string/cost_value"/>
                    </LinearLayout>

                    <!-- recycler view -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_offer_history_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:elevation="0dp"
                        android:padding="0dp"
                        android:background="@color/white"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

                    <View
                        android:id="@+id/vw_bottom1_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f2f2"/>

                    <LinearLayout
                        android:id="@+id/ll_recycler_bottom1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_bottom1_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            style="@style/txt_opensans_b_16_greyishbrown"
                            android:text="@string/volume_sum"/>
                        <ImageView
                            android:id="@+id/iv_sum_mark"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="4dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:src="@drawable/ic_information_white"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_bottom1_value"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            style="@style/txt_opensans_b_16_greyishbrown"
                            android:text="0"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/vw_bottom2_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2f2f2"/>

                    <LinearLayout
                        android:id="@+id/ll_recycler_bottom2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_bottom2_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            style="@style/txt_opensans_b_16_greyishbrown"
                            android:text="@string/your_offers_history_detail_total_estimated_cost"/>
                        <TextView
                            android:id="@+id/tv_bottom2_value"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            style="@style/txt_opensans_b_16_greyishbrown"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_bottom_deal_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:elevation="0dp"
            android:background="@color/pale_gray"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_whole_deal_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_whole_deal_options"
                style="@style/txt_opensans_b_15_greyishbrown"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:text="@string/whole_deal_option_selected_desc"
                style="@style/txt_opensans_r_11_greyishbrown"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>