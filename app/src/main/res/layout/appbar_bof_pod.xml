<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar_bof_pod"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/title_bar"
    tools:showIn="@layout/act_bof_pod">
    <!-- Collapsing Toolbar -->
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/title_bar"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <!-- collapsing search bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            android:background="@color/title_bar"
            android:orientation="vertical">

            <!-- Route Selector : Fixed -->
            <include layout="@layout/appbar_bof_header_pod"/>

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:background="@drawable/bg_round_corner_black_route_filter"
                    style="@style/txt_opensans_r_16_greyishbrown"
                    android:text="@string/buy_offer_search"/>
            </LinearLayout>
        </LinearLayout>
        <!-- fixed toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/title_bar"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin">
            <!-- Toolbar -->
            <include layout="@layout/toolbar_common"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>
