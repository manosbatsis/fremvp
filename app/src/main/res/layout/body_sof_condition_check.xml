<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.selloffer.SofConditionCheckAct"
    tools:showIn="@layout/act_sof_condition_check"
    android:background="@color/pale_gray">

    <!-- background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/pale_gray">

        <!-- background -->
        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="61dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_round_corner_737373"
            android:layout_gravity="right"
            android:gravity="center"
            style="@style/txt_opensans_b_14_737373"
            android:text="@string/edit"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            style="@style/CardViewStyle"
            tools:ignore="ContentDescription">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <!-- Prepaid -->
                    <TextView
                        android:id="@+id/tv_payment_term"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:text="Prepaid"
                        style="@style/txt_opensans_b_15_greyishbrown"/>
                    <ImageView
                        android:id="@+id/iv_check_mark"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_information_white"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/color_f2f4f9"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="139dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_initial_payment"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:gravity="top"
                                android:text="0%"
                                style="@style/txt_opensans_eb_18_greyishbrown"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="bottom"
                                android:text="@string/sof_initial_deal_date"
                                style="@style/txt_opensans_r_11_greyishbrown"/>
                            <TextView
                                android:id="@+id/tv_initial_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:text="$0"
                                style="@style/txt_opensans_r_13_greyishbrown"/>
                        </LinearLayout>
                        
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_midterm_payment"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="0%"
                                style="@style/txt_opensans_eb_18_greyishbrown"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="bottom"
                                android:text="@string/sof_midterm"
                                style="@style/txt_opensans_r_11_greyishbrown"/>
                            <TextView
                                android:id="@+id/tv_midterm_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:text="$0"
                                style="@style/txt_opensans_r_13_greyishbrown"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_ramainder_payment"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="0%"
                                style="@style/txt_opensans_eb_18_greyishbrown"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="bottom"
                                android:text="@string/sof_remainder_n_balance"
                                style="@style/txt_opensans_r_11_greyishbrown"/>
                            <TextView
                                android:id="@+id/tv_ramainder_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:text="$0"
                                style="@style/txt_opensans_r_13_greyishbrown"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/color_f2f4f9"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:textAllCaps="true"
                        android:text="@string/selloffer_total_deal_amount"
                        style="@style/txt_opensans_b_16_greyishbrown"/>
                    <TextView
                        android:id="@+id/tv_deal_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:text="$0"
                        style="@style/txt_opensans_b_16_greyishbrown"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_collect_condition_on_calendar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/view_collect_plan_on_calendar"
            style="@style/txt_opensans_r_15_737373"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
