                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="W02"
                                style="@style/txt_opensans_b_15_white"/>
                            <View
                                android:id="@+id/pv_vertical_inventory_graph_2_bar"
                                android:layout_width="32dp"
                                android:layout_height="4dp"
                                android:background="@color/purpley_blue"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_inventory_last_minute_inventory_vgraph_3"
                            android:layout_width="0dp"
                            android:layout_height="131dp"
                            android:layout_weight="2.5"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:orientation="vertical">
                            <!-- purpley_blue, color_302289 / color_322394, color_231963 -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_3_onmarket"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/purpley_blue"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="80"
                                    app:progressView_duration="1000"
                                    app:progressView_autoAnimate="false"
                                    app:progressView_radius="4dp"
                                    android:visibility="visible"/>
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_3_instock"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/color_302289"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="80"
                                    app:progressView_duration="1000"
                                    app:progressView_autoAnimate="false"
                                    app:progressView_radius="4dp"
                                    android:visibility="visible"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/pv_vertical_inventory_graph_3_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="W03"
                                style="@style/txt_opensans_b_15_white"/>
                            <View
                                android:id="@+id/pv_vertical_inventory_graph_3_bar"
                                android:layout_width="32dp"
                                android:layout_height="4dp"
                                android:background="@color/purpley_blue"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_inventory_last_minute_inventory_vgraph_4"
                            android:layout_width="0dp"
                            android:layout_height="131dp"
                            android:layout_weight="2.5"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:orientation="vertical">
                            <!-- purpley_blue, color_302289 / color_322394, color_231963 -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_4_onmarket"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/purpley_blue"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="80"
                                    app:progressView_duration="1000"
                                    app:progressView_autoAnimate="false"
                                    app:progressView_radius="4dp"
                                    android:visibility="visible"/>
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_4_instock"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/color_302289"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="80"
                                    app:progressView_duration="1000"
                                    app:progressView_autoAnimate="false"
                                    app:progressView_radius="4dp"
                                    android:visibility="visible"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/pv_vertical_inventory_graph_4_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="W04"
                                style="@style/txt_opensans_b_15_white"/>
                            <View
                                android:id="@+id/pv_vertical_inventory_graph_4_bar"
                                android:layout_width="32dp"
                                android:layout_height="4dp"
                                android:background="@color/purpley_blue"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_inventory_last_minute_inventory_vgraph_5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:orientation="vertical">
                            <!-- purpley_blue, color_302289 / color_322394, color_231963 -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_5_onmarket"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/purpley_blue"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="80"
                                    app:progressView_duration="1000"
                                    app:progressView_autoAnimate="false"
                                    app:progressView_radius="4dp"
                                    android:visibility="visible"/>
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_5_instock"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/color_302289"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="80"
                                    app:progressView_duration="1000"
