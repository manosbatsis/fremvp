                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginEnd="5dp"
                            android:background="@color/color_302289"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_opensans_r_13_greyishbrown"
                            android:text="@string/your_inventory_in_stock"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="5dp"
                            android:background="@color/purpley_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/txt_opensans_r_13_greyishbrown"
                            android:text="@string/your_inventory_on_market"/>
                    </LinearLayout>

                    <!-- vertical graph / week no / under bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="48dp"
                        android:gravity="top"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/ll_inventory_last_minute_inventory_vgraph_1"
                            android:layout_width="0dp"
                            android:layout_height="131dp"
                            android:layout_weight="2.5"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:orientation="vertical">
                            <!-- purpley_blue, color_302289 / color_322394, color_231963 -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_1_onmarket"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/purpley_blue"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="60"
                                    app:progressView_duration="1000"
                                    app:progressView_autoAnimate="false"
                                    app:progressView_radius="4dp"
                                    android:visibility="visible"/>
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_1_instock"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/color_302289"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="80"
                                    app:progressView_duration="1000"
                                    app:progressView_autoAnimate="false"
                                    app:progressView_radius="4dp"
                                    android:visibility="visible"/>
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/pv_vertical_inventory_graph_1_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:hint="@string/week_cell_hint"
                                style="@style/txt_opensans_b_15_white"/>
                            <View
                                android:id="@+id/pv_vertical_inventory_graph_1_bar"
                                android:layout_width="32dp"
                                android:layout_height="4dp"
                                android:background="@color/purpley_blue"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_inventory_last_minute_inventory_vgraph_2"
                            android:layout_width="0dp"
                            android:layout_height="131dp"
                            android:layout_weight="2.5"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:orientation="vertical">
                            <!-- purpley_blue, color_302289 / color_322394, color_231963 -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_2_onmarket"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/purpley_blue"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="80"
                                    app:progressView_duration="1000"
                                    app:progressView_autoAnimate="false"
                                    app:progressView_radius="4dp"
                                    android:visibility="visible"/>
                                <com.cyberlogitec.freight9.ui.inventory.progressview.ProgressView
                                    android:id="@+id/pv_vertical_inventory_graph_2_instock"
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="@android:color/transparent"
                                    app:progressView_colorProgress="@color/color_302289"
                                    app:progressView_orientation="vertical"
                                    app:progressView_labelText=""
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="80"
                                    app:progressView_duration="1000"
                                    app:progressView_autoAnimate="false"
