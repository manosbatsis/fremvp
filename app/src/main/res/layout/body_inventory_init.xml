                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <!-- Last Minute Inventory Detail cardview -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_inventory_vgraph_select"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:translationY="-35dp"
            style="@style/CardViewStyle"
            tools:ignore="ContentDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pv_vertical_inventory_graph_5_bar"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_inventory_vgraph_select_week_of"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ll_inventory_vgraph_select_total_owned"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_r_10_greyishbrown"
                        android:text="@string/your_inventory_week_of"/>
                    <TextView
                        android:id="@+id/tv_inventory_vgraph_week_of_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_b_15_greyishbrown"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_inventory_vgraph_select_total_owned"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@+id/ll_inventory_vgraph_select_week_of"
                    app:layout_constraintEnd_toStartOf="@+id/iv_inventory_vgraph_select_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_r_10_greyishbrown"
                        android:text="@string/your_inventory_total_owned"/>
                    <TextView
                        android:id="@+id/tv_inventory_vgraph_total_owned_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        style="@style/txt_opensans_b_15_greyishbrown"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_inventory_vgraph_select_arrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/default_white"
                    app:layout_constraintStart_toEndOf="@+id/ll_inventory_vgraph_select_total_owned"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Inventory Change -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pale_gray"
            android:layout_marginTop="-10dp"
            android:orientation="vertical">
            <!-- Inventory Change -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_inventory_change_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    style="@style/txt_opensans_eb_19_greyishbrown"
                    android:text="@string/your_inventory_change"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/ll_inventory_change_buttons"/>

                <LinearLayout
                    android:id="@+id/ll_inventory_change_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_inventory_change_title"
                    app:layout_constraintBottom_toTopOf="@+id/ll_inventory_change_index">
                    <CheckBox
                        android:id="@+id/cb_inventory_change_7"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        style="@style/txt_opensans_r_13_greyishbrown"
                        android:text="@string/your_inventory_change_7days"
                        android:textColor="@drawable/selector_inventory_cb_text"
                        android:button="@android:color/transparent"
                        android:background="@drawable/bg_checkbox_inventory_7"/>
                    <CheckBox
                        android:id="@+id/cb_inventory_change_15"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="-1dp"
                        android:layout_marginEnd="-1dp"
                        android:gravity="center"
                        style="@style/txt_opensans_r_13_greyishbrown"
                        android:text="@string/your_inventory_change_15days"
                        android:textColor="@drawable/selector_inventory_cb_text"
                        android:button="@android:color/transparent"
                        android:background="@drawable/bg_checkbox_inventory_15"/>
                    <CheckBox
                        android:id="@+id/cb_inventory_change_30"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        style="@style/txt_opensans_r_13_greyishbrown"
                        android:text="@string/your_inventory_change_30days"
                        android:textColor="@drawable/selector_inventory_cb_text"
                        android:button="@android:color/transparent"
                        android:background="@drawable/bg_checkbox_inventory_30"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_inventory_change_index"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_inventory_change_buttons"
                    app:layout_constraintBottom_toTopOf="@+id/recycler_inventory_change">
                    <View
                        android:id="@+id/v_inventory_change_index_today_index"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="5dp"
                        android:background="@color/blue_violet"/>
                    <TextView
                        android:id="@+id/tv_inventory_change_index_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txt_opensans_r_13_greyishbrown"
                        android:text="@string/your_inventory_change_index_today"/>
                    <View
                        android:id="@+id/v_inventory_change_index_other_days_index"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="5dp"
                        android:background="@color/very_light_pink"/>
                    <TextView
                        android:id="@+id/tv_inventory_change_index_other_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txt_opensans_r_13_greyishbrown"
                        android:text="@string/your_inventory_on_market"/>
                </LinearLayout>

                <!--  inventory change : horizontal graphs -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_inventory_change"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:elevation="0dp"
                    android:padding="0dp"
                    android:background="@color/pale_gray"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_inventory_change_index"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>