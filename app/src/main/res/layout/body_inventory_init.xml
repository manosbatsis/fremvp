<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.inventory.InventoryActivity"
    tools:showIn="@layout/act_inventory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1d1d1d"
            android:paddingTop="12dp"
            android:orientation="vertical">



            <!-- Refresh -->



            <!-- F9 Market value, Total Cost value, Estimated Profit-->
            <!-- Last Minute Inventory -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                style="@style/CardViewStyleBlack"
                tools:ignore="ContentDescription">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll_inventory_market_value"
                        android:layout_width="0dp"
                        android:layout_height="78dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ll_inventory_total_cost_value"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/ll_inventory_value_divider">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            style="@style/txt_opensans_b_10_959595"
                            android:text="@string/your_inventory_f9_market_value"/>
                        <TextView
                            android:id="@+id/tv_inventory_market_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="$0"
                            style="@style/txt_opensans_b_26_white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_inventory_total_cost_value"
                        android:layout_width="0dp"
                        android:layout_height="78dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@+id/ll_inventory_market_value"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/ll_inventory_value_divider">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            style="@style/txt_opensans_b_10_959595"
                            android:text="@string/your_inventory_total_cost_value"/>
                        <TextView
                            android:id="@+id/tv_inventory_total_cost_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="$0"
                            style="@style/txt_opensans_b_26_white"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/ll_inventory_value_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_323232"
                        app:layout_constraintStart_toEndOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_inventory_total_cost_value"
                        app:layout_constraintBottom_toTopOf="@+id/ll_inventory_estimated_profit"/>

                    <LinearLayout
                        android:id="@+id/ll_inventory_estimated_profit"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toEndOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_inventory_value_divider"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginEnd="10dp"
                            style="@style/txt_opensans_r_13_9b9b9b"
                            android:text="@string/your_inventory_estimated_profit"/>
                        <TextView
                            android:id="@+id/tv_inventory_estimated_profit_value"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:layout_marginEnd="20dp"
                            style="@style/txt_opensans_r_13_9b9b9b"
                            android:text="+ $0"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Last Minute Inventory -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_inventory_last_minute_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/ll_inventory_last_minute_inventory_index_graph">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="24dp"
                        style="@style/txt_opensans_eb_24_white"
                        android:text="@string/your_inventory_last_minute_inventory"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_inventory_last_minute_inventory_index_graph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_inventory_last_minute_inventory"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <!-- index -->
                    <LinearLayout
