<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_sof_ctype_volume"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="0dp"
    android:background="@color/pale_gray">

    <!-- 2nd card : Container type -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ll_buy_order_container_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <TextView
            android:id="@+id/tv_buy_order_container_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:text=""
            style="@style/txt_opensans_b_15_565656"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/btn_go_default_l"
            android:visibility="gone"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>

