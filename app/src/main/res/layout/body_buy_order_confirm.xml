<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_buy_order_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_gray"
    android:layout_marginBottom="0dp"
    android:orientation="vertical">

    <!-- 2nd card : Container type -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ll_buy_order_container_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <TextView
            android:id="@+id/tv_buy_order_container_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:text=""
            style="@style/txt_opensans_b_15_565656"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/btn_go_default_l"
            android:visibility="gone"/>
    </androidx.cardview.widget.CardView>

    <!-- 3rd card : volume input & Price -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Volume input-->
            <include layout="@layout/body_batch"
                app:layout_constraintBottom_toTopOf="@+id/ll_volume_set"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_volume_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_batch_root">
                <!-- list view title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginEnd="14dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:id="@+id/chk_buy_order_period_all"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/bg_checkbox"
                            android:visibility="invisible"/>
                        <View
                            android:id="@+id/view_buy_order_title_dummy"
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tv_buy_order_title_period"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            style="@style/txt_opensans_b_11_greyishbrown"
                            android:text="@string/volume_period"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_title_volume_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            style="@style/txt_opensans_b_11_greyishbrown"
                            android:text="@string/volume_price"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="2dp"
                            android:gravity="center_vertical|right"
                            style="@style/txt_opensans_r_13_greyishbrown"
                            android:text="x"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_title_volume_volume"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        style="@style/txt_opensans_b_11_greyishbrown"
                        android:text="@string/volume_volume"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.45"
                        android:gravity="center_vertical|right"
                        style="@style/txt_opensans_b_11_greyishbrown"
                        android:text="@string/volume_subtotal"/>
                </LinearLayout>

                <!-- recycler view -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_volume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:elevation="0dp"
                    android:padding="0dp"
                    android:background="@color/white"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_f2f2f2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:text="@string/volume_sum"/>
                    <TextView
                        android:id="@+id/tv_buy_order_sum_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:text="$0"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/CardViewStyle"
        tools:ignore="ContentDescription">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_buy_order_total_deal_amount"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/ll_buy_order_initial_payment_payable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        style="@style/txt_opensans_r_13_595959"
                        android:text="@string/volume_deal_amount"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        style="@style/txt_opensans_r_13_verylightpink"
                        android:text="@string/volume_deal_amount_desc_simple"/>
                    <TextView
                        android:id="@+id/tv_buy_order_total_deal_amount_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        style="@style/txt_opensans_b_16_595959"
                        android:text="0"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_buy_order_total_deal_amount_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/txt_opensans_r_13_7b7b7b"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_buy_order_initial_payment_payable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/div_buy_order_initial_payment_payable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_buy_order_total_deal_amount">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            style="@style/txt_opensans_r_13_595959"
                            android:text="@string/volume_deal_payment_transaction"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            style="@style/txt_opensans_r_13_verylightpink"
                            android:text="@string/volume_deal_payment_payable_desc_simple"/>
                        <TextView
                            android:id="@+id/tv_buy_order_deal_payment_payable_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical|right"
                            style="@style/txt_opensans_b_16_595959"
                            android:text="0"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_buy_order_deal_payment_payable_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        style="@style/txt_opensans_r_13_verylightpink"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            style="@style/txt_opensans_r_13_595959"
                            android:text="@string/volume_deal_available_account_budget"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            style="@style/txt_opensans_r_13_verylightpink"
                            android:text="@string/volume_deal_available_account_budget_desc_simple"/>
                        <TextView
                            android:id="@+id/tv_buy_order_deal_available_account_budget_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            style="@style/txt_opensans_b_16_595959"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/div_buy_order_initial_payment_payable"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f4f9"
                app:layout_constraintBottom_toTopOf="@+id/ll_buy_order_expected_balance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_buy_order_total_deal_amount"/>

            <LinearLayout
                android:id="@+id/ll_buy_order_expected_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div_buy_order_initial_payment_payable">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_buy_order_deal_amount_balance_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:text="@string/volume_deal_amount_balance"/>
                    <TextView
                        android:id="@+id/tv_buy_order_deal_amount_balance_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txt_opensans_b_16_greyishbrown"
                        android:text="$0"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    style="@style/txt_opensans_r_13_verylightpink"
                    android:text="@string/volume_deal_amount_balance_desc"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_buy_order_make_a_new_sell_offer_using_this_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/pale_gray"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_buy_order_make_a_new_sell_offer_using_this_condition"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            style="@style/txt_opensans_semib_13_greyishbrown"
            android:text="@string/buy_order_select_new_sell_offer"
            android:background="@drawable/bg_round_corner_greyish_brown_fill_pale"/>

    </LinearLayout>
 </LinearLayout>