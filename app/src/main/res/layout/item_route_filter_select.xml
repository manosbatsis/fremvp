<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <!-- From or To -->
    <LinearLayout
        android:id="@+id/ll_inventory_route_item_value_oneside"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginStart="32dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_inventory_route_item_polpod_code"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                style="@style/txt_opensans_eb_16_greyishbrown"/>
            <TextView
                android:id="@+id/tv_inventory_route_item_polpod_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                style="@style/txt_opensans_r_13_greyishbrown"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ALL -->
    <LinearLayout
        android:id="@+id/ll_inventory_route_item_value_all"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_inventory_route_item_polcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_opensans_eb_20_greyishbrown"/>
                <TextView
                    android:id="@+id/tv_inventory_route_item_polname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_opensans_r_11_verylightpink"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="3dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rectangle_4c4c4c"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_inventory_route_item_podcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_opensans_eb_20_greyishbrown"/>
                <TextView
                    android:id="@+id/tv_inventory_route_item_podname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_opensans_r_11_verylightpink"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>