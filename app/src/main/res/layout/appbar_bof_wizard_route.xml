<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar_bof_route_wizard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/title_bar"
    tools:showIn="@layout/act_bof_wizard_route">

    <!-- Collapsing Toolbar -->
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/title_bar"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <!-- collapsing search bar -->
        <LinearLayout
            android:id="@+id/ll_progress_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            android:background="@color/title_bar"
            android:orientation="vertical">
            <!-- Dot Indicator -->
            <include layout="@layout/appbar_bof_wizard_route_progress"/>
            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_search_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_toolbar_back"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_round_corner_black_route_filter"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:layout_marginEnd="4dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null"
                        android:imeOptions="actionSearch"
                        style="@style/txt_opensans_eb_15_white"
                        android:hint="@string/buy_offer_search"
                        android:textColorHint="@color/greyish_brown"/>
                    <ImageView
                        android:id="@+id/iv_search_clear"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_search_x_drak"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_round_corner_black_route_filter"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/servicelane_code"
                        android:layout_width="92dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical"
                        android:text=""
                        style="@style/txt_opensans_eb_16_white"/>
                    <TextView
                        android:id="@+id/servicelane_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:text=""
                        style="@style/txt_opensans_r_13_white"/>
                    <ImageView
                        android:id="@+id/iv_servicelane_cancel"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_cross_darkgrey"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- fixed toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/title_bar"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin">
            <!-- Toolbar -->
            <include layout="@layout/toolbar_common"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
</com.google.android.material.appbar.AppBarLayout>
