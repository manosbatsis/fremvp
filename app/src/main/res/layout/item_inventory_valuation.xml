<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_inventory_valuation_week"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                style="@style/txt_opensans_r_13_greyishbrown"/>
            <TextView
                android:id="@+id/tv_inventory_valuation_weekof"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                style="@style/txt_opensans_r_10_8b8b8b"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_inventory_valuation_cost_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            style="@style/txt_opensans_r_13_greyishbrown"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_inventory_valuation_market_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center_vertical|right"
                android:text="$26,000"
                style="@style/txt_opensans_r_13_greyishbrown"/>
            <TextView
                android:id="@+id/tv_inventory_valuation_market_value_profit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical|left"
                android:text="+$3,000"
                style="@style/txt_opensans_r_10_greenblue"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>